header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul 
            li 
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                // loggedIn은 localMiddleware에서 온 변수
                // res.locals의 key를 사용할 수 있음
                // res.locals.loggedIn이 true라면
                li
                    a(href="/users/edit") Edit Profile &rarr;
                        
                li 
                    a(href="/videos/upload") Upload Video &rarr;
                li
                    a(href="/users/logout") Log out &rarr;
                    // log out menu 보여주고
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatarUrl === ""
                            span 😚
                        else 
                            img(src=`/${loggedInUser.avatarUrl}`).header__avatar
            else
                li 
                    a(href="/login") Login
                li 
                    a(href="/join").header__btn Join